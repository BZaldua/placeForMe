										<form class="navbar-form navbar-right hidden-md hidden-lg" method="post" action="/login">
											<div class="form-group">
												<input name="login" type="text" placeholder="Email helbidea" class="form-control">
											</div>
											<div class="form-group">
												<input name="password" type="password" placeholder="Pasahitza" class="form-control">
											</div>
											<div class="form-group center">
												<button type="submit" class="btn btn-default">Saioa hasi</button>
											</div>
											<div class="form-group center">
												<a href="/students">Erregistratu</a>
											</div>
											<div class="form-group center hidden-sm">
												<span class="hidden-xs"> | </span>
												<a href="/modifipass">Pasahitza ahaztu zaizu?</a>
											</div>
										</form>
									<div class="form-group center hidden-sm hidden-sm hidden-xs">
										<span> | </span>
										<a href="/students">Erregistratu</a>
									</div>
								</div>
								
								<!-- POP UP BIDEZ ERAKUTSIKO DEN FORMULARIOA -->
								<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
									<div class="modal-dialog">
										<div class="modal-content">
											<div id="div-forms">
												<form id="login-form" method="post" action="/login">
													<div class="modal-body">
															<h1>Saioa hasi </h1>
														<center>
															<label>Erabiltzailea</label><br>
															<input name="login" id="login_username" class="form-control" type="text" placeholder="Email" required><br>
															<label>Pashaitza</label><br>
															<input name="password" id="login_password" class="form-control" type="password" placeholder="Pasahitza" required>
														</center><br>
														<button type="submit" class="btn btn-primary btn-lg btn-block">Saioa hasi</button>
														<br>
													</div>
													<center><a href ="/modifipass">Pasahitza ahaztu zaizu?</a></center>
												</form>
                   
											</div>
										</div>
									</div>
								</div>
	
							<% }else{ %>
								<form method="post" action="/logout?_method=delete" class="navbar-form navbar-right">
									<label class="hidden-sm"><%= session.user.email %></label>
									<button class="btn btn-default" type="submit">Saioa itxi</button>
								</form>
							<% } %>
						</div>
					</div>
				</nav>
			</div>
		</div>

<!-- ERRORS MESSAGES -->
		<section  id="s1">
			<div>
				<% if ( !(typeof errors==="undefined") && errors.length) { %>
				<div class="errors">
					<% for (var i in errors) { %>
						<div align="center" class="alert alert-danger alert-dismissible" role="alert">
							<%- errors[i].message %>
						</div>
					<% } %>
				</div>
				<% } %>

			</div>
<!-- END ERRORS MESSAGES -->
<!-- SUCCESFULL MESSAGES -->
			<div>
				<% if ( !(typeof msg==="undefined") && msg.length) { %>
				<div class="msg">
					<% for (var i in msg) { %>
					<div align="center" class="alert alert-success alert-dismissible" role="alert">
						<%- msg[i].message %>
					</div>
					<% } %>
				</div>
				<% } %>
			</div>
<!-- END SUCCESFULL MESSAGES -->

