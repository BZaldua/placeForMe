<div class="panel panel-default">
	<div class="panel-heading">Kontakturako formularioa</div>
		<div class="panel-body">
			<div>
				<form method='post' action='contact'>
					<div class="container">
						<div class="row">
							<div class="col-xs-12 col-sm-4">
							</div>
							<div class="col-xs-12 col-sm-4">
								<div class="form-group">
									<input autofocus required class="form-control" type="text" name="name" placeholder="Izena" id="name" pattern="(^[a-zA-Z ñÑáéíóúÁÉÍÓÚ]{1,20}$)"/>
								</div>
								<hr>
								<div class="form-group">
									<input class="form-control" required type="text" name="lastname" id="lastname" placeholder="Abizena" pattern="(^[a-zA-Z ñÑáéíóúÁÉÍÓÚ]{1,20}$)"/>
								</div>
								<hr>
								<div class="form-group">
									<input class="form-control" required type="text" pattern="(^([a-zA-Z])+(\d{3})+\@ikasle.ehu.eus$)" placeholder="posta002@ikasle.ehu.eus" name="email" id="email"/>
								</div>
								<hr>
								<div class="form-group">
									<textarea class="form-control vertical_move" placeholder="Mezua"  name="text" id="text"> </textarea>
								</div>
								<div class="g-recaptcha row" data-sitekey="6LdWbAkTAAAAAG2mUTDawR1Cjf6D_K9sWG_C_2xv" name="g-recaptcha" id="recaptcha"></div>
								<div class="row">
									<input class="btn btn-default" type="submit"  value="Bidali" />
								</div>
							</div>
							<div class="col-xs-12 col-sm-4">
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
