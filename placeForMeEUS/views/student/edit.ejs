
	<div class="panel panel-default">
		<div class="panel-heading">Profila editatu</div>
		<div class="panel-body">
			<form method="post" action="/students/update?_method=put">
				<div class="container">
					<div class="row">
						<div class="col-xs-12 col-sm-4">
						</div>
						<div class="col-xs-12 col-sm-4">
							<div class="row">
								<div class="col-md-6">
									<label for="name_edit">Izena</label>
								</div>
								<div class="col-md-6">
									<input autofocus name="name_edit" id="name_edit" class="form-control" type="text" pattern="(^[a-zA-Z ñÑáéíóúÁÉÍÓÚ]{1,20}$)" value="<%= student.name %>" data-toggle="tooltip" data-placement="right" title="Letrak bakarrik.">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-md-6">
									<label for="surname_edit">Abizena</label>
								</div>
								<div class="col-md-6">
									<input name="surname_edit" id="surname_edit" class="form-control" type="text" pattern="(^[a-zA-Z ñÑáéíóúÁÉÍÓÚ]{1,20}$)" value="<%= student.surname %>" data-toggle="tooltip" data-placement="right" title="Letrak bakarrik.">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-md-6">
									<label for="year">Ikasturtea</label>
								</div>
								<div class="col-md-6">
									<select class="form-control" id="year" name="year_edit">
										<option value="3" <% if (student.year === 3) { %> selected <% } %> >3</option>
										<option value="4" <% if (student.year === 4) { %> selected <% } %> >4</option>
									</select>
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-md-6">
									<label for="avg_edit">Bataz besteko nota</label>
								</div>
								<div class="col-md-6">
									<input name="avg_edit" id="avg_edit" class="form-control" type="text" value="<%= student.avgGrade %>" data-toggle="tooltip" data-placement="right" title="0 eta 10 arteko zenbaki bat.">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-md-6">
									<label for="credits_edit">Kredituak</label>
								</div>
								<div class="col-md-6">
									<input name="credits_edit" id="credits_edit" class="form-control" type="number" value="<%= student.credits %>" data-toggle="tooltip" data-placement="right" title="0 eta 240 arteko zenbaki bat.">
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-md-6">
									<label for="specialisation_edit">Espezialitatea</label>
								</div>
								<div class="col-md-6">
									<select class="form-control" id="specialisation_edit" name="specialisation_edit">
										<option value="C" <% if (student.specialisation === "C") { %> selected <% } %> >Konputazioa</option>
										<option value="IC" <% if (student.specialisation === "IC") { %> selected <% } %> >Konputagailuen ingeniaritza</option>
										<option value="IS" <% if (student.specialisation === "IS") { %> selected <% } %> >Software ingeniaritza</option>
									</select>
								</div>
							</div>
							<hr>
							<div class="row">
								<input class="btn btn-default" type="submit" value="Aldaketak gorde">
							</div>
						</div>
						<div class="col-xs-12 col-sm-4">
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
