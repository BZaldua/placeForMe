	<div class="panel panel-default">
		<div class="panel-body">
			<div>
				<div class="container">
					<div class="row">
						<div class="col-xs-12 col-sm-4">
						</div>
						<div class="col-xs-12 col-sm-4">
							<% if (typeof(newCourse)==="undefined" || newCourse===null) { %>
								<form method="post" action="/course/create">
									<div class="row">
										<div class="col-md-6">
											<label for="name">Izena:<span class="required">*</span></label>
										</div>
										<div class="col-md-6">
											<input class="form-control"type="text" id="name" name="course[name]" placeholder="Nombre" pattern="(^[a-zA-Z ñÑáéíóúÁÉÍÓÚ. \d]+$)" required="required" autofocus="autofocus" data-toggle="tooltip" data-placement="right" title="Zenbakiak, letrak eta puntuak"/>
										</div>
									</div>
									<hr>
									<div class="row">
										<div class="col-md-6">
											<label for="creditos">Kredituak:<span class="required">*</span></label>
										</div>
										<div class="col-md-6">
											<input class="form-control" type="number" id="creditos" name="course[credits]" placeholder="Kredituak" required="required" data-toggle="tooltip" data-placement="right" title="Zenbaki osoa"/>
										</div>
									</div>
									<hr>
									<div class="row">
										<div class="col-md-6">
											<label for="especialidad">Espezialitatea:</label>
										</div>
										<div class="col-md-6">
											<select class="form-control" id="especialidad" name="course[specialisation]">
												<option value="C" <% if (course.specialisation === "C") { %> selected <% } %> >Konputazioa</option>
												<option value="IC" <% if (course.specialisation === "IC") { %> selected <% } %> >Konputagailuen ingeniaritza</option>
												<option value="IS" <% if (course.specialisation === "IS") { %> selected <% } %> >Software ingeniaritza</option>
											</select>
										</div>
									</div>
									<hr>
									<div class="row">
										<div class="col-md-6">
											<label for="plazas">Plaza kopurua: <span class="required">*</span></label>
										</div>
										<div class="col-md-6">
											<input class="form-control" type="number" id="plazas" name="course[vacancies]" placeholder="Número de plazas" required="required" autofocus="autofocus" data-toggle="tooltip" data-placement="right" title="Zenbaki osoa"/>
										</div>
									</div>
									<hr>
									<div class="row">
			    						<div class="col-md-6">
			    							<label for="curso">Ikasturtea:</label>
			    						</div>
			    						<div class="col-md-6">
			    							<select class="form-control" id="year" name="course[year]">
			    								<option value="3º" <% if (course.year === "3º") { %> selected <% } %> >3º</option>
			    								<option value="4º" <% if (course.year === "4º") { %> selected <% } %> >4º</option>
			    							</select>
			    						</div>
			    					</div>
			    					<hr>
			    					<div class="row">
			    						<div class="col-md-6">
			    							<label for="curso">Lauhilekoa:</label>
			    						</div>
			    						<div class="col-md-6">
			    							<select class="form-control" id="semester" name="course[semester]">
			    								<option value="1º" <% if (course.semester === "1") { %> selected <% } %> >1</option>
			    								<option value="2º" <% if (course.semester === "2") { %> selected <% } %> >2</option>
			    							</select>
			    						</div>
			    					</div>
			    					<hr>
									<div class="row">
										<div class="col-md-6">
											<label for="descripcion">Deskribapena: <span class="required">*</span></label>
										</div>
										<div class="col-md-6">
											<textarea class="form-control" id="message" name="course[description]" value="<%= course.description %>" placeholder="Idatzi irakasgaiaren deskribapena hemen." required="required" data-toggle="tooltip" data-placement="right" title="255 karaktere gehienez"></textarea>
										</div>
									</div>
									<hr>
									<div class="row">
										<input class="btn btn-default" type="submit" value="Gorde" id="submit"/>
									</div>
								</form>
							<%}else{%>
								<div align="center" class="alert alert-info" role="alert">
									Honako irakasgaia sortu da:<br><br>
									<div class="input-group input-group-lg">
			  							<span class="input-group-addon" id="sizing-addon1">Izena</span>
			  							<span class="form-control" id="sizing-addon1"><%=newCourse.name%></span>
									</div>
									<div class="input-group input-group-lg">
			  							<span class="input-group-addon" id="sizing-addon1">Kredituak</span>
			  							<span class="form-control" id="sizing-addon1"><%=newCourse.credits%></span>
									</div>
									<div class="input-group input-group-lg">
			  							<span class="input-group-addon" id="sizing-addon1">Espezialitatea</span>
			  							<span class="form-control" id="sizing-addon1"><%=newCourse.specialisation%></span>
									</div>
									<div class="input-group input-group-lg">
			  							<span class="input-group-addon" id="sizing-addon1">Plaza kopurua</span>
			  							<span class="form-control" id="sizing-addon1"><%=newCourse.vacancies%></span>
									</div>
									<div class="input-group input-group-lg">
			  							<span class="input-group-addon" id="sizing-addon1">Deskribapena</span>
			  							<span class="form-control" id="sizing-addon1"><%=newCourse.description%></span>
									</div>
									<br><br>
									<a class="navbar-link" href="/course/allcourses"> <button class="btn btn-default" type="button">Jarraitu</button></a>
								</div>
							<%}%>
						</div>
						<div class="col-xs-12 col-sm-4">
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
