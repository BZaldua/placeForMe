	<div class="panel panel-default">
		<div class="panel-heading">Sortu zure pasahitza</div>
		<div class="panel-body">
			<% if(email){ %>
				<p>Idatzi erabiltzaile honentzat pasahitza: <b><%= email %>.</p>
			<% } %>
			<div>
				<form method="post" action="/user/confirm">
					<div class="container">
						<div class="row">
							<div class="col-xs-12 col-sm-4">
							</div>
							<div class="col-xs-12 col-sm-4">
								<input autofocus type="password" name="put_password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" placeholder="Pasahitz berria">
								<hr>
								<input type="submit" class="btn btn-default" value="Sortu pasahitza">
								<input type="hidden" name="token" value="<%= token %>">
							</div>
							<div class="col-xs-12 col-sm-4">
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
